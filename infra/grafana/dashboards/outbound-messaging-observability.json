{
  "annotations": {
    "list": [
      {
        "datasource": "Prometheus",
        "enable": true,
        "expr": "changes(outbound_message_dead_letter_queue_size[5m]) > 10",
        "iconColor": "red",
        "name": "DLQ Growth Alerts",
        "tagKeys": "channel",
        "textFormat": "DLQ Growth Detected",
        "titleFormat": "Dead Letter Queue Alert"
      }
    ]
  },
  "dashboard": {
    "title": "Outbound Messaging Production Observability",
    "tags": ["outbound", "messaging", "observability", "production"],
    "timezone": "browser",
    "editable": true,
    "panels": [
      {
        "id": 1,
        "title": "Queue Depth by Status (Real-time)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "outbound_message_queue_depth",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Message Count"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [1000],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Queue Depth Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": "Total Queued Messages",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "outbound_message_total_queued",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 500, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Dead Letter Queue Size",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "outbound_message_dead_letter_queue_size",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Queue Depth by Channel",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "outbound_message_queue_depth_by_channel",
            "legendFormat": "{{channel}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Message Count"
          }
        ]
      },
      {
        "id": 5,
        "title": "Delivery Latency Percentiles (All Channels)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(outbound_message_delivery_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(outbound_message_delivery_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(outbound_message_delivery_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ]
      },
      {
        "id": 6,
        "title": "Delivery Latency P95 by Channel",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (channel, le) (rate(outbound_message_delivery_latency_seconds_bucket[5m])))",
            "legendFormat": "p95 - {{channel}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ]
      },
      {
        "id": 7,
        "title": "Delivery Latency P99 by Channel",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum by (channel, le) (rate(outbound_message_delivery_latency_seconds_bucket[5m])))",
            "legendFormat": "p99 - {{channel}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ]
      },
      {
        "id": 8,
        "title": "Send Success Rate by Channel",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum by (channel) (rate(outbound_message_send_success_total[5m])) / (sum by (channel) (rate(outbound_message_send_success_total[5m])) + sum by (channel) (rate(outbound_message_send_failure_total[5m])))",
            "legendFormat": "{{channel}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "max": 1,
            "min": 0,
            "label": "Success Rate"
          }
        ]
      },
      {
        "id": 9,
        "title": "Message Send Rate by Channel",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate(outbound_message_queued_total[5m])",
            "legendFormat": "Queued - {{channel}}",
            "refId": "A"
          },
          {
            "expr": "rate(outbound_message_send_success_total[5m])",
            "legendFormat": "Sent - {{channel}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Messages/sec"
          }
        ]
      },
      {
        "id": 10,
        "title": "Failure Rate Trends by Error Code",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "sum by (error_code) (rate(outbound_message_send_failure_total[5m]))",
            "legendFormat": "{{error_code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Failures/sec"
          }
        ]
      },
      {
        "id": 11,
        "title": "Retry Rate by Channel",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(outbound_message_retry_total[5m])",
            "legendFormat": "{{channel}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Retries/sec"
          }
        ]
      },
      {
        "id": 12,
        "title": "Messages with Retry Attempts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "outbound_message_retry_count",
            "legendFormat": "{{channel}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Message Count"
          }
        ]
      },
      {
        "id": 13,
        "title": "Dead Letter Rate by Channel",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "rate(outbound_message_dead_letter_total[5m])",
            "legendFormat": "{{channel}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "DLQ Messages/sec"
          }
        ]
      },
      {
        "id": 14,
        "title": "WhatsApp Quota Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 48},
        "targets": [
          {
            "expr": "whatsapp_quota_used / whatsapp_quota_limit",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            },
            "max": 1,
            "min": 0,
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 15,
        "title": "WhatsApp Quota Used",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 48},
        "targets": [
          {
            "expr": "whatsapp_quota_used",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "value_and_name"
        }
      },
      {
        "id": 16,
        "title": "WhatsApp Quota Remaining",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 48},
        "targets": [
          {
            "expr": "whatsapp_quota_remaining",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 100, "color": "yellow"},
                {"value": 300, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 17,
        "title": "WhatsApp Quota Timeline",
        "type": "graph",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 52},
        "targets": [
          {
            "expr": "whatsapp_quota_used",
            "legendFormat": "Used",
            "refId": "A"
          },
          {
            "expr": "whatsapp_quota_limit",
            "legendFormat": "Limit",
            "refId": "B"
          },
          {
            "expr": "whatsapp_quota_remaining",
            "legendFormat": "Remaining",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Messages"
          }
        ]
      },
      {
        "id": 18,
        "title": "Alert Counts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 56},
        "targets": [
          {
            "expr": "rate(outbound_message_stuck_alert_total[1h])",
            "legendFormat": "Stuck Messages - {{channel}}/{{status}}",
            "refId": "A"
          },
          {
            "expr": "rate(outbound_message_high_queue_depth_alert_total[1h])",
            "legendFormat": "High Queue Depth",
            "refId": "B"
          },
          {
            "expr": "rate(outbound_message_dead_letter_alert_total[1h])",
            "legendFormat": "Dead Letter Growth",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Alerts/hour"
          }
        ]
      },
      {
        "id": 19,
        "title": "Overall System Health Score",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 64},
        "targets": [
          {
            "expr": "(sum(rate(outbound_message_send_success_total[5m])) / (sum(rate(outbound_message_send_success_total[5m])) + sum(rate(outbound_message_send_failure_total[5m])))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 20,
        "title": "Average Delivery Time (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 64},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(outbound_message_delivery_latency_seconds_bucket[1h])) by (le))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 21,
        "title": "P99 Delivery Time (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 64},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(outbound_message_delivery_latency_seconds_bucket[1h])) by (le))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 30, "color": "yellow"},
                {"value": 60, "color": "red"}
              ]
            }
          }
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 27,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "version": 1
  }
}
