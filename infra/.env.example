# PostgreSQL Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=myapp
POSTGRES_PORT=5432

# JWT Configuration
# Secret key for signing JWT tokens. Use a strong, randomly generated string (minimum 32 characters recommended).
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-change-in-production

# JWT token expiration time in milliseconds (default: 86400000 = 24 hours)
JWT_EXPIRATION=86400000

# CORS Configuration
# Comma-separated list of allowed origins for Cross-Origin Resource Sharing
# Example: http://localhost:3000,https://example.com
# Use "*" for development only (not recommended for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# API Configuration
# Base URL for the API (used for generating links, redirects, etc.)
API_BASE_URL=http://localhost:8080

# Email Configuration (if using email features)
# SMTP server hostname
MAIL_HOST=smtp.example.com
# SMTP server port (typically 587 for TLS, 465 for SSL, 25 for unencrypted)
MAIL_PORT=587
# SMTP username
MAIL_USERNAME=your-email@example.com
# SMTP password or app-specific password
MAIL_PASSWORD=your-email-password
# Email address to use as sender
MAIL_FROM=noreply@example.com

# Security Configuration
# Maximum number of login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5
# Account lockout duration in minutes
ACCOUNT_LOCKOUT_DURATION=30

# Application Configuration
# Spring profile to use (dev, test, prod)
SPRING_PROFILES_ACTIVE=dev
# Application server port
SERVER_PORT=8080
