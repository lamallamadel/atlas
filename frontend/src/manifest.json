  "shortcuts": [
    {
      "name": "Nouveau Dossier",
      "short_name": "Dossier",
      "description": "Créer un nouveau dossier client",
      "url": "/dossiers/create",
      "icons": [
        {
          "src": "/assets/icons/shortcut-dossier.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Voir les messages récents",
      "url": "/dossiers?tab=messages",
      "icons": [
        {
          "src": "/assets/icons/shortcut-messages.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Recherche",
      "short_name": "Recherche",
      "description": "Rechercher dans l'application",
      "url": "/search",
      "icons": [
        {
          "src": "/assets/icons/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Voir le tableau de bord",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/assets/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
