# Document Storage Configuration Example
# Copy this file to your .env or configure environment variables

# Storage Strategy Selection
# Options: localFileStorage, s3FileStorage
STORAGE_STRATEGY=localFileStorage

# Maximum file size in bytes (default: 10MB)
STORAGE_MAX_FILE_SIZE=10485760

# Local Filesystem Storage Configuration
STORAGE_LOCAL_BASE_PATH=./storage

# AWS S3 Storage Configuration
# Only required if STORAGE_STRATEGY=s3FileStorage
STORAGE_S3_BUCKET_NAME=my-document-bucket
STORAGE_S3_REGION=us-east-1
# Optional: Leave empty to use IAM roles or AWS credential chain
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=

# Spring Multipart Configuration
MULTIPART_MAX_FILE_SIZE=10MB
MULTIPART_MAX_REQUEST_SIZE=10MB
