# Security Configuration Example
# Copy this file to .env or set as environment variables

# Jasypt Encryption Password (CRITICAL: Keep this secret!)
# Generate with: openssl rand -base64 32
JASYPT_ENCRYPTOR_PASSWORD=your-secure-password-here-change-this

# CSRF Protection
SECURITY_CSRF_ENABLED=true

# JWT Signing Key Rotation
JWT_ROTATION_ENABLED=true
JWT_ROTATION_CRON=0 0 3 1 * ?
JWT_GRACE_PERIOD_DAYS=7
JWT_CLEANUP_CRON=0 0 4 * * ?

# API Secret Rotation
SECRET_ROTATION_ENABLED=true
SECRET_ROTATION_CRON=0 0 2 * * ?
SECRET_OVERLAP_PERIOD_HOURS=24

# Webhook Signature Validation
WEBHOOK_SIGNATURE_ENABLED=true

# Database Connection (with encrypted credentials)
# To encrypt: java -cp jasypt-1.9.3.jar org.jasypt.intf.cli.JasyptPBEStringEncryptionCLI input="mypassword" password="${JASYPT_ENCRYPTOR_PASSWORD}" algorithm=PBEWITHHMACSHA512ANDAES_256
# Then use: ENC(encrypted_value_here)
SPRING_DATASOURCE_USERNAME=myuser
SPRING_DATASOURCE_PASSWORD=ENC(your_encrypted_password_here)

# OAuth2/JWT Configuration
OAUTH2_ISSUER_URI=https://your-idp.example.com/realms/myrealm

# CORS Configuration (restrict in production)
CORS_ALLOWED_ORIGINS=https://app.example.com,https://www.example.com

# Example encrypted values (for reference)
# Plain: myApiKey123
# Encrypted: ENC(QXlKaGJHY2lPaUpJVXpJMU5pSXNJblI1Y0NJNklrcFhWQ0o5...)
